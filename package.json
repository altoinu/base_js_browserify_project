{
  "name": "name_here",
  "version": "0.0.0",
  "description": "description here",
  "main": "src/index.js",
  "scripts": {
    "bower": "bower",
    "build": "npm-run-all -p build:*",
    "testbuildWithCollapse:js": "npm-run-all build:js:browserify build:js:bannerize build:js:collapse testbuildWithCollapse:js:uglify",
    "build:js": "npm-run-all build:js:browserify build:js:bannerize build:js:uglify",
    "build:js:browserify": "browserify . -s ReplaceMeWithObjectName -g browserify-shim -o dist/index.js",
    "build:js:bannerize": "bannerize dist/index.js --banner=views/banner.ejs",
    "build:js:collapse": "bundle-collapser dist/index.js -o dist/index.collapse.js",
    "testbuildWithCollapse:js:uglify": "uglifyjs dist/index.collapse.js --support-ie8 --comments -m -c -o dist/index.min.js",
    "build:js:uglify": "uglifyjs dist/index.js --support-ie8 --comments -m -c -o dist/index.min.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "browserify-shim": {
    "jquery": "global:$"
  },
  "repository": {
    "type": "git",
    "url": "ssh://username@git_server/path"
  },
  "author": "Kaoru Kawashima",
  "license": "ISC",
  "devDependencies": {
    "bannerize": "^1.1.3",
    "bower": "^1.8.8",
    "browserify": "^16.2.3",
    "browserify-shim": "^3.8.14",
    "bundle-collapser": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "uglify-js": "^3.4.9"
  }
}
